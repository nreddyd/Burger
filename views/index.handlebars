<div class="container">
    <h1 class="text-center">Burgers!</h1>
    <div class="row justify-content-center text-center">

        <div class="col-6">
            <h2>Burgers Ready To Eat!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{!-- <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> --}}
                    <form>
                        {{!-- <input type="hidden" name="devoured" value="true"> --}}
                        <div class="p-3 mb-2 bg-info text-dark"> {{this.id}}. {{this.burger_name}}

                            {{!-- <button type="submit" class="btn btn-default">Devour it!</button> --}}
                            <button class="eat" data-id="{{this.id}}">Devour!</button>

                        </div>
                    </form>
                    {{/unless}}
                    {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Burgers Devouredt!</h2>

            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="p-3 mb-2 bg-warning text-white"> {{this.id}}. {{this.burger_name}}</div>


                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    <div class="row justify-content-center text-center">
        <div class="col-12">
            <h2>Add a Burger</h2>
            <form class="create-form" action="burgers/add" method="POST">

                <div class="form-group">
                    <label for="buger">Burger Name:</label>
                    <input type="text" id="burger" name="burger_name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>



</div>