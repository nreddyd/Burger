<h1>Burgers!</h1>

<h2>Burgers Ready To Eat!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{!-- <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> --}}
        <form>
            {{!-- <input type="hidden" name="devoured" value="true"> --}}
            <span> {{this.id}}.{{this.burger_name}}

                {{!-- <button type="submit" class="btn btn-default">Devour it!</button> --}}
                <button class="eat" data-id="{{this.id}}">Devour!</button>

            </span>
        </form>
        {{/unless}}
        {{/each}}
</ul>

<h2>Burgers Devouredt!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    {{this.id}}.{{this.burger_name}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="burgers/add" method="POST">

    <div class="form-group">
        <label for="buger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>